<p id="notice"><%= notice %></p>

<h1>Snipers</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Language</th>
      <th>Contents</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @snipers.each do |sniper| %>
      <tr>
        <td><%= sniper.title %></td>
        <td><%= sniper.language %></td>
        <td><%= sniper.contents %></td>
        <td><%= link_to 'Show', sniper %></td>
        <td><%= link_to 'Edit', edit_sniper_path(sniper) %></td>
        <td><%= link_to 'Destroy', sniper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

